<header>
  <h1 id="logo">&lt;codeSnippit&gt;</h1>
  <nav>
    {{#user}}
      <a href="/user/{{username}}" ><strong>{{username}}</strong></a> | <a href="/public">Public Snippits</a> | <a href="/logout">Logout</a>
    {{/user}}
    {{^user}}
      <a href="/public">Public Snippits</a> | <strong><a href="/">Login</a></strong>
    {{/user}}
  </nav>
</header>
<main>
  <h2>{{username}}'s snips</h2>
  {{#profile}}
    <a id="createBtn" href="/create" title="Create a new snippit">
      <div class="bar"></div>
      <div class="bar"></div>
    </a>
  {{/profile}}
  <div class="snipGrid">
    {{#data}}
      {{#.}}
        <div class="shortSnip">
          <h3><a href="/view/{{_id}}">{{title}}</a></h3>
          <div class="code short">
            <pre><code>{{code}}</code></pre>
          </div>
          <p>Language: {{#language}}<a href="/user/{{username}}/language/{{.}}" class="tag green">{{.}}</a> {{/language}}</p>
          <p>Tags: {{#tag}}<a href="/user/{{username}}/tag/{{.}}" class="tag orange">{{.}}</a> {{/tag}}</p>
          {{#public}}
            <p>Public</p>
          {{/public}}
          {{^public}}
            <p>Private</p>
          {{/public}}
        </div>
      {{/.}}
    {{/data}}
  </div>
</main>
