<header>
  <a href="/logout">Login/Logout</a>
  <h1 id="logo">codeSnippit</h1>
  <a href="/public">Public Snippits</a>
</header>
<h2>{{username}}'s snips</h2>
{{#profile}}
  <a href="/create">Create a new snippit!</a>
{{/profile}}
<div class="snipGrid">
  {{#data}}
    {{#.}}
      <div class="shortSnip">
        <h3><a href="/view/{{_id}}">{{title}}</a></h3>
        <div class="code short">
          <pre><code>{{code}}</code></pre>
        </div>
        <p>Language: {{#language}}<a href="/user/{{username}}/language/{{.}}" class="tag blue">{{.}}</a> {{/language}}</p>
        <p>Tags: {{#tag}}<a href="/user/{{username}}/tag/{{.}}" class="tag orange">{{.}}</a> {{/tag}}</p>
        {{#public}}
          <p>Public</p>
        {{/public}}
        {{^public}}
          <p>Private</p>
        {{/public}}
      </div>
    {{/.}}
  {{/data}}
</div>
