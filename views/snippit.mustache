          <input type="text" name="tag" value="{{#tag}}{{.}}, {{/tag}}" placeholder="Node, boilerplate, etc.">
        </div>

        <select class="" name="public">
          {{#public}}
          <option value="true" selected>Public - Anyone can view and copy this snippit</option>
          <option value="">Private - Only you can view and edit this snippit</option>
          {{/public}}
