<header>
  <h1 id="logo">&lt;codeSnippit&gt;</h1>
  <nav>
    {{#user}}
      <a href="/user/{{username}}" ><strong>{{username}}</strong></a> | <a href="/public">Public Snippits</a> | <a href="/logout">Logout</a>
    {{/user}}
    {{^user}}
      <a href="/public">Public Snippits</a> | <strong><a href="/">Login</a></strong>
    {{/user}}
  </nav>
</header>
<main>
  <h3>Public snippits:</h3>
  <div class="snipGrid">
    {{#data}}
      {{#.}}
        <div class="shortSnip">
          <h3><a href="/view/{{_id}}">{{title}}</a></h3>
          <h4>By <a href="/user/{{author}}">{{author}}</a></h4>
          <div class="code">
            <pre><code>{{code}}</code></pre>
          </div>
          <p>Language: {{#language}}<a href="/language/{{.}}" class="tag green">{{.}}</a> {{/language}}</p>
          <p>Tags: {{#tag}}<a href="/tag/{{.}}" class="tag orange">{{.}}</a> {{/tag}}</p>
        </div>
      {{/.}}
    {{/data}}
  </div>
</main>
